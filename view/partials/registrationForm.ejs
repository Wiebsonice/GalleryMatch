<form class="main-form" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Persoonlijke info</legend>
        <p>
            <label for="name">Naam</label>
            <input type="text" id="name" name="name" placeholder="naam" required>
        </p>
        <p>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Naam@email.nl" required>
        </p>
        <p>
            <label for="wachtwoord">Wachtwoord</label>
            <input type="password" id="wachtwoord" name="password" placeholder="********" required>
        </p>
        <p>
            <label for="cover">Profile image</label>
            <input type="file" id="cover" name="cover" accept="image/*">
        </p>
        <p>
            <button type="submit" name="button">Registreren</button>
        </p>
    </fieldset>
