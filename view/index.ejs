<html lang="nl">
<head>
    <% include partials/head %>
</head>

<body>
    <nav class="default">
        <div class="logo">
            <img src="assets/logo.png" alt="site logo">
        </div>
    </nav>
    <header>
        <img src="assets/header.jpg" alt="" class="header-bg">
        <div class="gradient-mask"></div>
        <h1>Zoek de ideale kunstzinnige partner</h1>
    </header>
    <main class="main-home">
        <a class="sub-cta" href="/register">Log-in</a>
        <a class="main-cta" href="/account">Profiel pagina</a>
    </main>

    <% for (var index = 0; index < data.length; index++){%>
        <li>
            <div class="location-bg" style="background-image: url(<%= data[index].cover %>)"></div>
            <a href="/<%= data[index].name %>">
            <header>
                <p class="title"><%= data[index].name %></p>
                <p class="Location"><%= data[index].email %></p>
            </header>
            </a>
        </li>
    <% } %>

    <script src="http://localhost:3000/js/main.js"></script>
</body>
